<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nitr.quizapp20.mainmenu">
    <com.rey.material.widget.Button
        style="@style/RaiseWaveColorButtonRippleStyle"
        android:id="@+id/take_quiz"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:text="@string/takeaquiz"
        android:textSize="20sp"
        app:rd_delayClick="afterRelease"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickTakeQuiz" />
    <com.rey.material.widget.Button
        style="@style/RaiseWaveColorButtonRippleStyle"
        android:id="@+id/settings"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:text="@string/settings"
        android:textSize="20sp"
        app:rd_delayClick="afterRelease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/take_quiz"
        android:onClick="onClickSettings" />

</RelativeLayout>
