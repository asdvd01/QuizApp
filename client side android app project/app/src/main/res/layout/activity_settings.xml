<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nitr.quizapp20.Settings"
    app:theme="@style/AppTheme">

    <com.rey.material.widget.Button
        style="@style/RaiseWaveColorButtonRippleStyle"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:text="@string/save"
        android:textSize="20sp"
        app:rd_delayClick="afterRelease"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />
    <android.support.design.widget.TextInputLayout

        android:id="@+id/etServerAddress_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/view"
        android:layout_marginBottom="30dp"
        >
        <EditText
            android:hint="@string/serveraddress"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/etServerAddress"
            android:layout_above="@+id/view" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
