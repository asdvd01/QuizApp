<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ColorsCircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColors">@array/progress_colors</item>
    </style>

    <style name="RaiseWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button_bg</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_bottomPadding">0dp</item>
        <item name="rd_cornerRadius">25dp</item>
    </style>

    <style name="QuizButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/circle_button_lorange</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_maskType">oval</item>
        <item name="rd_bottomPadding">0dp</item>
    </style>

    <style name="QuizArrowButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/circle_button_blue_arrow</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_maskType">oval</item>
        <item name="rd_bottomPadding">0dp</item>
    </style>

    <style name="QuizAnswers" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button_quiz_answers</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_bottomPadding">0dp</item>
        <item name="rd_cornerRadius">20dp</item>
    </style>

    <style name="QuizAnswersRect" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button_quiz_answers</item>
        <item name="rd_rippleColor">#33EFEFEF</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_bottomPadding">0dp</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <style name="SubmitAnswers" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/button_submit_answers</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">0dp</item>
        <item name="rd_topPadding">0dp</item>
        <item name="rd_rightPadding">0dp</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_bottomPadding">0dp</item>
        <item name="rd_cornerRadius">20dp</item>
    </style>

    <style name="tool_bar_theme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#902DA0FF</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <!-- AppBar Style -->

    <style name="AppBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="selectableItemBackground">@null</item>
    </style>

    <!-- Navigator Drawable -->

    <style name="NavigatorDrawableIcon" parent="Material.Drawable.NavigationDrawerIcon">
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_padding">18dp</item>
    </style>

    <style name="NavigationDrawerDrawable">
        <item name="nd_ripple">@style/ToolbarRippleStyle</item>
        <item name="nd_icon">@style/NavigatorDrawableIcon</item>
    </style>

    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">#33FFFFFF</item>
    </style>

    <!-- TabPageIndicator -->

    <style  name="TabPageIndicator"  parent="Material.Widget.TabPageIndicator.Light">
        <item name="tpi_tabPadding">12dp</item>
        <item name="tpi_tabRipple">@style/TabRippleStyle</item>
        <item name="tpi_indicatorHeight">3dp</item>
        <item name="android:textAppearance">@style/TabTextAppearance</item>
        <item name="tpi_mode">scroll</item>
    </style>

    <style name="TabTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@drawable/color_tpi</item>
    </style>

    <style name="TabRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@null</item>
        <item name="rd_rippleColor">#90EAFB00</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_padding">0dp</item>
    </style>

    <style name="FloatingWaveColorActionButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">@color/colorPrimary</item>
        <item name="fab_elevation">4dp</item>
        <item name="fab_iconLineMorphing">@style/FloatingActionButtonIcon</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>

    <style name="FloatingActionButtonIcon" >
        <!--<item name="lmd_state">@xml/fab_icon_states</item> -->
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">800</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">#FFFFFFFF</item>
        <item name="lmd_strokeCap">butt</item>
        <item name="lmd_strokeJoin">miter</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>
</resources>
